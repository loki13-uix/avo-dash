    "prepare": "husky",
    "biome:fix": "biome check --write --unsafe $(git diff --cached --name-only --diff-filter=ACMR | grep -E '\\.tsx?$')",
    "biome:lint": "biome check $(git diff --cached --name-only --diff-filter=ACMR | grep -E '\\.tsx?$')",
    "biome:format": "biome format --write $(git diff --cached --name-only --diff-filter=ACMR | grep -E '\\.tsx?$')",
    "ts:check": "tsc --noEmit",
    "build:check": "CI=true next build"
